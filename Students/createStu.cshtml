@{
    Page.Title = "CreateStudent";
    Layout = "~/_layout.cshtml";
}
<!-- Form Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Create Student</h6>
                <form action="~/Students/insertStu.cshtml?" method="post">
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">StuID</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                            name="StuID">
                        <div id="emailHelp" class="form-text">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">StuName</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                            name="StuName">
                        <div id="emailHelp" class="form-text">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Gender</label>
                        <select class="form-select mb-3" aria-label="Default select example" name="gender">
                            <option value="Male" selected>Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">DOB</label>
                        <input type="date" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                            name="DOB">
                        <div id="emailHelp" class="form-text">
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary" value="Create"> Create</button>
                </form>
            </div>
        </div>
    </div>
</div>
