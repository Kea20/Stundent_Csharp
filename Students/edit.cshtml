@{
    Page.Title = "UpdateStudent";
    Layout = "~/_layout.cshtml";

    var stuID = Request.QueryString.Get("id");
    var db = WebMatrix.Data.Database.Open("Student_DB");
    var stus = db.QuerySingle("SELECT * FROM Students WHERE StudentID=@0",stuID); 
    if(stus == null) {
        Response.Redirect("~/Student/default.cshtml");
        return;
    }  
}

<!-- Form Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Create Student</h6>
                <form action="~/Students/update.cshtml?" method="post">
                <input type="hidden" class="form-control" id="inputEmail3" name="OldStuID" value="@stus.StudentID">
                    <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">StudendtID</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputEmail3" name="StuID" value="@stus.StudentID">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">StuName</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputPassword3" name="StuName" value="@stus.StudentName">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Gender</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputPassword3" name="gender" value="@stus.Gender">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">DOB</label>
                        <div class="col-sm-10">
                            <input type="date" class="form-control" id="inputPassword3" name="DOB" value="@stus.DateOfBirth">
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary" value="Create"> Update</button>
                </form>
            </div>
        </div>
    </div>
</div>
