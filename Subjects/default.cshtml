@using WebMatrix.Data;
@{
    Page.Title = "Subjects";
    Layout = "~/_layout.cshtml";

    var db = Database.Open("Student_DB");
    var subs = db.Query("SELECT * FROM Subjects");
    var Count=0;
}
<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light text-center rounded h-100 p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h5 class="mb-0">Subjects Table</h5>
                    <a href="~/Subjects/create.cshtml?" class="btn btn-primary ms-2">Add   <i class="bi bi-person-plus"></i></a>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">SubjectID</th>
                                <th scope="col">SubjectName</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sub in subs)
                            {
                                Count++;
                                <tr>
                                    <th scope="row">@Count</th>
                                    <td>@sub.SubjectID</td>
                                    <td>@sub.SubjectName</td>
                                    <td>
                                        <a href="~/Subjects/edit.cshtml?id=@sub.SubjectID" class="btn btn-sm btn-primary"><i
                                            class="bi bi-pencil-square"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Table End -->