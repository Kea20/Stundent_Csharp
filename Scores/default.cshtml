@using System.Data.SqlClient;
@{
    Page.Title = "Scores";
    Layout = "~/_layout.cshtml";
    var c = @"Data Source=DESKTOP-QBTI1IA\SQLEXPRESS;Database=Student_DB;Trusted_Connection=True;";
    var conn = new SqlConnection(c);
    conn.Open();
    var query = "SELECT students.StudendtID,students.StudentName,students.Gender,2022-year(DateOfBirth),count(Results.subjectID)as countSubject ,sum(score)as total ,avg(score) as Average FROM Students INNER JOIN Results ON Results.StudendtID=students.StudendtID GROUP BY students.StudendtID,students.StudentName,students.Gender,2022-year(DateOfBirth) ORDER BY avg(score) DESC";
    var cmd = new SqlCommand(query, conn);
    var dr = cmd.ExecuteReader();
}
<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light text-center rounded h-100 p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h5 class="mb-0">Student Score</h5>
                    
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">StudendtID</th>
                                <th scope="col">StudentName</th>
                                <th scope="col">Gender</th>
                                <th scope="col">Years</th>
                                <th scope="col">Total</th>
                                <th scope="col">Average</th>
                            </tr>
                        </thead>
                        <tbody>
                            @while (dr.Read())
                            {
                                <tr>
                                    <th scope="row">1</th>
                                    <td>@dr.GetString(0)</td>
                                    <td>@dr.GetString(1)</td>
                                    <td>@dr.GetString(2)</td>
                                    <td>@dr.GetInt32(3)</td>
                                    <td>@dr.GetDouble(5)</td>
                                    <td>@dr.GetDouble(6)</td>
                                
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Table End -->

@{
    dr.Close();
    conn.Close();
}
